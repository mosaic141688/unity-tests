{
    "schemas": {
        "person": {
            "name": "string",
            "age": "number"
        }
    },
    "data": {
        "years": [1990, 1995, 2000],
        "min_legal_age": 21,
        "people": [
            {"type": "record", "schema": "person", "value": {"name": "John Doe", "age": 14}},
            {"type": "record", "schema": "person", "value": {"name": "Lamar G",  "age": 43}},
            {"type": "record", "schema": "person", "value": {"name": "Sam Rock", "age":  7}},
            {"type": "record", "schema": "person", "value": {"name": "Kate Fiz", "age": 21}},
            {"type": "record", "schema": "person", "value": {"name": "Jane Sly", "age": 28}}
        ]
    },
    "filters": {
        "legal_age": {
            "type": "where",
            "expression": "$element.age >= a"
        },
        "legal_age": {
            "type": "where",
            "expression": "$element.age < a"
        }
    },
    "transforms": {
        "only_name": {
            "type": "pick",
            "source_type": "record:person",
            "pick": "name"
        }
    },
    "actions": {
        "sendData": {
            "type": "http_post",
            "url": "http://api.example.com/users"
        },
        "updateStore": {
            "type": "set",
            "tag": "grownups"
        }
    },
    "components": {
        "grownups": {
            "type": "list",
            "source": "people",
            "controls": [
                {"type": "button", "label": "Push", "action": "sendData", "source": "$input"},
                {"type": "button", "label": "Save","action": "updateStore", "source": "$output"}
            ],
            "pipeline": [
                {"filter": "legal_age", "deps": {"a": "@min_legal_age"}},
                {"filter": "max_age", "deps": {"a": 100}},
                {"transform": "only_name"}
            ]
        }
    },
    "blocks": {
        "default": {
            "direction": "column",
            "components": ["grownups"]
        }
    },
    "pages": {
        "home": {
            "direction": "row",
            "blocks": ["default"]
        }
    }
}
